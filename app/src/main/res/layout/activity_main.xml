<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1150"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/start_game_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".screens.MainActivity">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/__2025_11_18_182540"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="48dp"/>

        <!-- USERNAME -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="UserName"
            android:textColorHint="#F6F6F8"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#F6F6F8"
            app:hintTextColor="#F6F6F8"
            app:startIconDrawable="@drawable/user"
            app:startIconTint="#F6F6F8"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#353c70"
                android:textColor="#F6F6F8"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- PASSWORD -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:hint="Password"
            android:textColorHint="#F6F6F8"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#F6F6F8"
            app:endIconMode="password_toggle"
            app:hintTextColor="#F6F6F8"
            app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
            app:startIconTint="#F6F6F8"
            app:layout_constraintTop_toBottomOf="@id/username_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#353c70"
                android:inputType="textPassword"
                android:textColor="#F6F6F8"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/enter_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="#0B1150"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_input_layout"
            app:srcCompat="@drawable/login__1_" />

        <TextView
            android:id="@+id/register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register."
            android:textColor="#F6F6F8"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/password_input_layout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account yet?"
            android:textColor="#F6F6F8"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/register_text"
            app:layout_constraintEnd_toEndOf="@id/register_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
