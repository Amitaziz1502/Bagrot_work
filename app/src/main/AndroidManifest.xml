        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.Bagrot_work"
        tools:targetApi="31">
        <activity
            android:name=".screens.SplashActivity"
            android:exported="false"
